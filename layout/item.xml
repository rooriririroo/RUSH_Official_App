<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/profile_img"
        android:text="이소연" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/profile_img"
        android:text="2018년11월27일" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_img"
        android:layout_marginTop="70dp"
        android:text="Content" />

    <TextView
        android:id="@+id/like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/content"
        android:layout_marginTop="100dp"
        android:text="좋아요 2" />

    <TextView
        android:id="@+id/comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/like_num"
        android:layout_toEndOf="@+id/like_num"
        android:layout_marginStart="15dp"
        android:text="댓글 2" />

    <ToggleButton
        android:id="@+id/like_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/profile_img"
        android:layout_marginTop="135dp"
        android:background="#CADBAE"
        android:focusable="false"
        android:textOn="♡"
        android:textOff="♡"
        android:textColor="@color/button_selector"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/comment_button"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/like_button"
        android:layout_marginStart="182dp"
        android:background="#CADBAE"
        android:focusable="false"
        android:text="댓글"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>